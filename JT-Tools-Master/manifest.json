{
  "manifest_version": 3,
  "name": "JT-Tools Master Suite",
  "version": "1.0.0",
  "description": "All-in-one toolkit for JobTread: Schedule Drag & Drop, Contrast Fix, and Budget Formatter with toggle controls",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "https://*.jobtread.com/*"
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "service_worker": "background/service-worker.js"
  },
  "content_scripts": [
    {
      "matches": ["https://*.jobtread.com/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "features/drag-drop.js",
        "features/contrast-fix.js",
        "features/formatter.js",
        "styles/formatter-toolbar.css"
      ],
      "matches": ["https://*.jobtread.com/*"]
    }
  ]
}
